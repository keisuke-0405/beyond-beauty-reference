.merit-cta-title {
    font-size: 32px;
    font-weight: 700;
    margin-bottom: 40px;
}

.merit-cta-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
}

@media (max-width: 768px) {
    .merit-grid {
        grid-template-columns: 1fr;
    }
    
    .merit-card--wide {
        flex-direction: column;
    }
    
    .merit-card--wide .merit-card__img-box,
    .merit-card--wide .merit-card__content {
        width: 100%;
    }
    
    .merit-card--wide .merit-card__img-box {
        height: 250px;
    }
}




