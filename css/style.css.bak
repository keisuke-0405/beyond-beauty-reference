.about__button:hover {
    background-color: var(--color-black);
    color: var(--color-white);
}


.about__button:hover {
    background-color: var(--color-black);
    color: var(--color-white);
}


/* Features */
.features__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
}

.features__item {
    background-color: #777; /* Fallback */
    color: var(--color-white);
